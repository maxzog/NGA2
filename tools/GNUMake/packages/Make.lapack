# Add appropriate LAPACK includes and libraries
ifdef LAPACK_DIR
  LIBRARY_LOCATIONS += $(LAPACK_DIR)/
  LIBRARIES += -llapack -lblas
else
  ifeq ($(os_name), Darwin)
    LIBRARIES += -framework Accelerate
  else
    $(error LAPACK_DIR not defined, but it is currently required by NGA2)
  endif
endif
